{
  "name": "react-dd-menu-portal",
  "version": "0.0.13",
  "description": "A fork of react-dd-menu built with React portals to hoist dropdown menus in the DOM.",
  "main": "dist/index.js",
  "scripts": {
    "scripts": "babel ./src/js --out-dir ./dist",
    "styles": "sass --style expanded ./src/scss/react-dd-menu.scss ./dist/react-dd-menu.css && sass --style compressed ./src/scss/react-dd-menu.scss ./dist/react-dd-menu.min.css",
    "prebuild": "rimraf dist",
    "build": "npm run scripts && npm run styles",
    "postbuild": "postcss dist/*.css --use autoprefixer --dir ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/williamboman/react-dd-menu.git"
  },
  "keywords": [
    "react",
    "react-component",
    "dropown",
    "dropdown-menu",
    "component"
  ],
  "author": "mlaursen",
  "license": "MIT",
  "homepage": "https://github.com/williamboman/react-dd-menu#readme",
  "dependencies": {
    "react-portal": "^4.0.0",
    "react-transition-group": "^1.1.3"
  },
  "peerDependencies": {
    "react": ">= 15.3.0",
    "react-dom": ">= 15.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^6.0.2",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "classnames": "^2.2.6",
    "eslint": "^2.7.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.3.0",
    "postcss-cli": "^6.1.0",
    "prop-types": "^15.7.2",
    "react": "^15.4.0",
    "react-dom": "^15.4.2",
    "rimraf": "^2.5.1",
    "sass": "^1.17.3"
  }
}
